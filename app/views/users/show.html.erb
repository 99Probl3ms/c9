<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= image_tag @user.profile.avatar.url, class: 'avatar-show-img' %>
    </div>
 
    <div class="col-md-6">
      <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
      <h3><span class="job-title-icon"><%= job_title_icon %></span><%= @user.profile.job_title %></h3>
      
      <div class="well profile-block profile_desctription">
        <h3>Description</h3>
        <%= @user.profile.description %>
      </div>
      <div class="well profile-block profile_contact_info">
        <h3>Contact Information</h3>
      <% if current_user.plan_id == 2 %>
        <%= @user.profile.phone_number %>
        <%= @user.profile.contact_email %>
      <% end %>
      </div>
    </div>
 </div>
</div>